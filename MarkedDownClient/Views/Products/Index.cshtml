@{
  Layout = "_Layout";
}

@using MarkedDownClient;

<h1>Products</h1>

@if (Model.Count == 0)
{
  <h3>There are no products currently available</h3>
  <p>Please check back at a later time</p>
}

<ul>
  @foreach(Product product in Model)
  {
    <li>@Html.ActionLink($"{product.Name}", "Details", new {id = product.ProductId}) </li>
  }
</ul>

